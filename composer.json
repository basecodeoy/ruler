{
    "name": "basecodeoy/ruler",
    "description": "A stateless rules engine for applications.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "intl"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/ruler",
    "support": {
        "issues": "https://github.com/basecodeoy/ruler/issues",
        "source": "https://github.com/basecodeoy/ruler",
        "security": "https://github.com/basecodeoy/ruler/blob/main/.github/SECURITY.md"
    },
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.1.1"
    },
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Ruler\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
